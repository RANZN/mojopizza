<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Item_Detail_Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="12dp"
        android:src="@drawable/big_6"
        android:scaleType="fitStart"
        android:id="@+id/Tv_Show_Image"/>

    <TextView
        android:id="@+id/Tv_Detail_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Tv_Show_Image"
        android:layout_marginStart="15dp"
        android:text="some Detail"
        android:textSize="18dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of the Item"
        android:layout_below="@+id/Tv_Detail_1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/Tv_Show_Name"/>

    <TextView
        android:id="@+id/Tv_Show_Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tv_Show_Name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Detail of the Item"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tv_Show_Detail"
        android:text="$10"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/Tv_Show_Prize"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/Trans_Btn_addToCart"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add To Cart"
        android:textAllCaps="false"
        android:background="#ef3960"
        android:layout_below="@id/Tv_Show_Prize"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"
        android:padding="15dp"/>


</RelativeLayout>